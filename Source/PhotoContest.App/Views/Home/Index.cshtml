@using PagedList
@using PagedList.Mvc
@using PhotoContest.App.Models.Contest
@model IPagedList<SummaryContestViewModel>

@{
    ViewBag.Title = "Home";
}

<div class="col-md-7 col-md-offset-1">
    <h1>Welcome to 300mm!</h1>
    <div class="row">
        @if (Model.Count() == 0)
        {
            <h3>No contests.</h3>
        }
        else
        {
            for (int i = 0; i < Model.Count; i += 2)
            {
                <div class="row">
                    @Html.DisplayFor(m => Model[i])
                    @if (i <= Model.Count - 2)
                    {
                        @Html.DisplayFor(m => Model[i + 1])
                    }
                </div>
            }
        }
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, ViewBag.sortBy }))
</div>