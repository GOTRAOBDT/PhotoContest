@using PhotoContest.App.Models.Contest
@model JuryViewModel
@{
    ViewBag.Title = "Jury";
}

<div class="col-md-7">
    <h2>Manage contest's Jury</h2>

    <div class="row">
        <div class="col-md-12">
            @foreach (var m in Model.Members)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        @if (m.ProfilePicture != null)
                        {
                            <img class="thumbnail" src="@m.ProfilePicture" alt="@m.UserName" />
                        }
                        else
                        {
                            <img class="thumbnail" src="~/Content/img/no-photo.png" alt="@m.UserName" />
                        }
                        <div class="caption">
                            <h3>@m.UserName</h3>
                            <p>
                                <a href="#" class="btn btn-default" role="button">Remove</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3">
            <a href="/Contests/@Model.ContestId/AddJuryMember" class="btn btn-warning">Add member</a>
        </div>
    </div>
</div>