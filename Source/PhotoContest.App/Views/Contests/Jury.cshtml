@using PhotoContest.App.Models.Contest
@model JuryViewModel
@{
    ViewBag.Title = "Jury";
}

<div class="col-md-7">
    <h2>Manage contest's Jury</h2>

    <div class="row">
        <div class="col-md-12">
            @Html.DisplayForModel()
        </div>
        @if (Model.IsContestOwner)
        {
            <div class="col-md-3">
                <a href="/Contests/@Model.ContestId/AddJuryMember" class="btn btn-warning">Add member</a>
            </div>
        }
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
            function hideModal(id) {
                $(id).modal('hide');
            }
    </script>
}