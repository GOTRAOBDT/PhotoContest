@model IList<PhotoContest.App.Models.Contest.ContestWinnerViewModel>
@using System.Collections.Generic;

@for (int i = 0; i < Model.Count; i++)
{
    <div class="col-md-6">
        <a href="@(Url.Action("Index", "Pictures", new { id = @Model[i].PictureId, contestId = Model[i].ContestId }))" class="contest-list">
            <div class="thumbnail">
                <img src="@Model[i].Picture.ThumbnailImageData" alt="Title: @Model[i].Picture.Title">
                <div class="caption">
                    <h2>#@i Place</h2>
                    <h3>@Model[i].Picture.Title</h3>
                    <span>By: @Model[i].WinnerName</span><br />
                    <span>Votes: @Model[i].Picture.VotesCount</span><br />
                </div>
            </div>
        </a>
    </div>
}
