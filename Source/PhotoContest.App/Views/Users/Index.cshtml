@model PhotoContest.App.Models.Users.DetailedUserInfoModel

@{
    ViewBag.Title = "User Info";
}

<div class="col-md-7 col-md-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Name</h3>
        </div>
        <div class="panel-body">
            <div class="media">
                <div class="media-left profile-image-container">
                    <a href="#">
                        <img class="media-object img-rounded" src="@Model.ProfilePicture" alt="Picture of @Model.Name">
                    </a>
                </div>
                <div class="media-body">
                    <strong>Username: </strong> @Model.UserName <br />
                    <strong>Gender:</strong> @Model.Gender <br />
                    <strong>Birthday:</strong> @(Model.BirthDate == null ? "(not available)" : Model.BirthDate.ToString()) <br />
                    <strong>Has:</strong> @Model.TotalPictures pictures <br />
                    <strong>Participates in:</strong> @Model.TotalContests contests<br />
                    <strong>Has won:</strong> @Model.TotalVotes votes<br />
                </div>
            </div>
        </div>
    </div>

    
</div>
