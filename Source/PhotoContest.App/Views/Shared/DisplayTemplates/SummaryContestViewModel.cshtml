@using PhotoContest.App.Models.Contest
@model SummaryContestViewModel

<div class="col-md-6">
    <a href="@(Url.RouteUrl("ContestDetails", new { id = @Model.Id }))" class="contest-list">
        <div class="thumbnail">
            <div class="thumbnail-image-container">
                <img src="@Model.Thumbnail" alt="@Model.Title" class="thumbnail-image-size">
            </div>
            <div class="caption">
                <h3>@Model.Title</h3>
                <span>Owner: @Html.ActionLink(@Model.Owner, "Index", "Users", new { username = Model.Owner }, null)</span><br/>
                <span>Start date: @Html.DisplayFor(m => m.StartDate)</span><br/>
                <span>End date: @Html.DisplayFor(m => m.EndDate)</span><br/>
                <span>Participation: @Model.ParticipantsCount member(s) with @Model.PicturesCount pictures</span><br/>
                <span>Votes: @Model.VotesCount</span><br/>
            </div>
        </div>
    </a>
</div>