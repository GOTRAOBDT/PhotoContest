@model PhotoContest.App.Models.Pictures.SummaryPictureViewModel

<div class="col-md-6">
    <a href="@(Url.Action("Index", "Pictures", new { id = @Model.Id }))" class="contest-list">
        <div class="thumbnail">
            <img src="@Model.ThumbnailImageData" alt="Author: @Model.Author">
            <div class="caption">
                <h3>@Model.Title</h3>   
                <span>Author: @Model.Author</span><br />
                <span>Total participations: @Model.ContestsCount</span><br />
                <span>Total votes: @Model.VotesCount</span><br />
            </div>
        </div>
    </a>
</div>