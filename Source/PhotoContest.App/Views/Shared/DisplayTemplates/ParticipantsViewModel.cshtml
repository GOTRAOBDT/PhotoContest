@model PhotoContest.App.Models.Contest.ParticipantsViewModel

<ul class="list-group">
    @foreach (var m in Model.Participants)
    {
        <li class="list-group-item" id="container-@m.UserName">
            <div class="row">
                <div class="col-md-offset-1">
                    @if (ViewContext.RouteData.DataTokens["area"] == null)
                    {
                        <h3>@Html.ActionLink(@m.UserName, "Index", "Users", new { username = m.UserName }, null)</h3>
                    }
                    else
                    {
                        <h3>@Html.ActionLink(@m.UserName, "GetUserByUsername", "Users", new { username = m.UserName }, null)</h3>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @if (m.ProfilePicture != null)
                    {
                        <img class="thumbnail" src="@m.ProfilePicture" alt="@m.UserName"/>
                    }
                    else
                    {
                        <img class="thumbnail" src="~/Content/img/no-photo.png" alt="@m.UserName"/>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-1 col-md-offset-10">
                    @if (Model.IsContestOwner)
                {
                        <button class="btn btn-default" role="button" data-toggle="modal" data-target="#confirm-@m.UserName">Remove</button>
                        <div class="modal" id="confirm-@m.UserName">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                        <h4 class="modal-title">Remove contest participant confirmation</h4>
                                    </div>
                                    <div class="modal-body">
                                        <p>You are about to remove "@m.UserName" from contest participants. Are you sure?</p>
                                    </div>
                                    <div class="modal-footer">
                                        @using (Ajax.BeginForm("RemoveParticipant", "Contests", new { id = Model.ContestId, username = m.UserName }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "container-" + @m.UserName, InsertionMode = InsertionMode.ReplaceWith }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary" id="delete-member-@m.UserName" onclick="hideModal('#confirm-@m.UserName')">Confirm</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </li>
    }
</ul>