@using PagedList
@using PagedList.Mvc
@using PhotoContest.App.Models.Contest
@model IPagedList<SummaryContestViewModel>

@{
    ViewBag.Title = "Manage Contests";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<h2>Manage Contests</h2>

<div class="col-md-7">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-body" id="admin-table">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Owner</th>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    @Html.DisplayForModel()
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    @Html.PagedListPager(Model, page => Url.Action("Contests", new { page }))
</div>