@using PagedList
@using PagedList.Mvc
@using PhotoContest.App.Areas.Administration.Models
@model IPagedList<UserViewModel>

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<h2>Manage Users</h2>

<div class="col-md-7">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-body" id="admin-table">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Birth date</th>
                            <th>Gender</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.DisplayForModel()
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @Html.PagedListPager(Model, page => Url.Action("Users", new { page }))
</div>