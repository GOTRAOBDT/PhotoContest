@using PagedList.Mvc
@using PhotoContest.App.Models.Contest
@model CandidatesViewModel
@{
    ViewBag.Title = "Candidates";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<div class="col-md-7 col-md-offset-1">
    <h2>Manage contest's candidates</h2>

    <div class="row">
        <div class="col-md-12">
            @Html.DisplayForModel()
        </div>
    </div>
    @Html.PagedListPager(Model.Candidates, page => Url.Action("Candidates", new { page }))
</div>

@section scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        function hideModal(id) {
            $(id).modal('hide');
        }
    </script>
}

